{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "parameters": {
    "aciGroupName": {
      "type": "string"
    },
    "containerNamePrefix": {
      "type": "string"
    },
    "agentCount": {
      "type": "int",
      "minValue": 1
    },
    "containerCoreCount": {
      "type": "int",
      "minValue": 1
    },
    "containerMemoryInGb": {
      "type": "string"
    },
    "azureDevopsUrl": {
      "type": "string"
    },
    "azureDevopsPAT": {
      "type": "securestring"
    },
    "azureDevopsAgentPool": {
      "type": "string"
    },
    "dockerImage": {
      "type": "string",
      "defaultValue": "apprenticeshipsdevops/azure-pipelines-base-agent-win:latest"
    }
  },
  "variables": {
    "containerPerGroup": "[greater(mul(parameters('containerCoreCount'), parameters('agentCount')), 4)]",
    "copy": [
      {
        "name": "containerArray",
        "count": "[parameters('agentCount')]",
        "input": {
          "name": "[concat(parameters('containerNamePrefix'), copyIndex('containerArray'))]",
          "properties": {
            "image": "[parameters('dockerImage')]",
            "environmentVariables": [
              {
                "name": "AZP_URL",
                "value": "[parameters('azureDevopsUrl')]"
              },
              {
                "name": "AZP_TOKEN",
                "value": "[parameters('azureDevopsPAT')]"
              },
              {
                "name": "AZP_AGENT",
                "value": "[concat(parameters('containerNamePrefix'), '-', copyIndex('containerArray'))]"
              },
              {
                "name": "AZP_POOL",
                "value": "[parameters('azureDevopsAgentPool')]"
              }
            ],
            "resources": {
              "requests": {
                "cpu": "[parameters('containerCoreCount')]",
                "memoryInGb": "[parameters('containerMemoryInGb')]"
              }
            }
          }
        }
      }
    ]
  },
  "resources": [
    {
      "comments": "This deployment is used when the maximum core count is below or equal to the per-group limit of 4",
      "condition": "[not(variables('containerPerGroup'))]",
      "name": "[parameters('aciGroupName')]",
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2018-10-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "restartPolicy": "OnFailure",
        "osType": "Windows",
        "containers": "[variables('containerArray')]"
      }
    },
    {
      "comments": "This deployment is used when the maximum core count is above the per-group limit of 4",
      "condition": "[variables('containerPerGroup')]",
      "name": "[concat(parameters('aciGroupName'), copyIndex(1))]",
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2018-10-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "restartPolicy": "OnFailure",
        "osType": "Windows",
        "containers": [
          {
            "name": "[concat(parameters('containerNamePrefix'), copyIndex(1))]",
            "properties": {
              "image": "[parameters('dockerImage')]",
              "environmentVariables": [
                {
                  "name": "AZP_URL",
                  "value": "[parameters('azureDevopsUrl')]"
                },
                {
                  "name": "AZP_TOKEN",
                  "value": "[parameters('azureDevopsPAT')]"
                },
                {
                  "name": "AZP_AGENT",
                  "value": "[concat(parameters('containerNamePrefix'), '-', copyIndex('containerArray'))]"
                },
                {
                  "name": "AZP_POOL",
                  "value": "[parameters('azureDevopsAgentPool')]"
                }
              ],
              "resources": {
                "requests": {
                  "cpu": "[parameters('containerCoreCount')]",
                  "memoryInGb": "[parameters('containerMemoryInGb')]"
                }
              }
            }
          }
        ]
      },
      "copy": {
        "name": "aciGroupCopy",
        "count": "[parameters('agentCount')]"
      }
    }
  ]
}
