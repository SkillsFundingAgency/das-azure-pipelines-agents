{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "resourceEnvironmentName": {
      "type": "string",
      "metadata": {
        "description": "Short name of the environment. Used for the name of resources created."
      }
    },
    "serviceName": {
      "type": "string",
      "metadata": {
        "description": "Short name of the service. Used for the name of resources created."
      }
    },
    "clusterName": {
      "type": "string"
    },
    "kubernetesVersion": {
      "type": "string"
    },
    "windowsProfile": {
      "type": "secureObject",
      "metadata": {
        "schema": {
          "adminUsername": "string",
          "adminPassword": "string"
        }
      }
    },
    "nodeResourceGroup": {
      "type": "string"
    },
    "windowsPoolName": {
      "type": "string"
    },
    "windowsNodeCount": {
      "type": "int",
      "defaultValue": 2,
      "minValue": 1
    },
    "windowsNodeKubernetesVersion": {
      "type": "string"
    },
    "linuxPoolName": {
      "type": "string"
    },
    "linuxNodeCount": {
      "type": "int",
      "defaultValue": 2,
      "minValue": 1
    },
    "linuxNodeKubernetesVersion": {
      "type": "string"
    },
    "logAnalyticsResourceGroup": {
      "type": "string"
    },
    "logAnalyticsWorkspaceName": {
      "type": "string"
    },
    "aadClientAppId": {
      "type": "string"
    },
    "aadServerAppId": {
      "type":"string"
    },
    "aadServerAppSecret": {
      "type": "securestring"
    }
  },
  "variables": {
    "resourceNamePrefix": "[toLower(concat('das-', parameters('resourceEnvironmentName'),'-', parameters('serviceName')))]",
    "vnetName": "[concat(variables('resourceNamePrefix'), '-vnet')]",
    "subnetName": "agent-aks",
    "logAnalyticsId": "[resourceId(parameters('logAnalyticsResourceGroup'), 'Microsoft.OperationalInsights/workspaces', parameters('logAnalyticsWorkspaceName'))]"
  },
  "resources": [
    {
      "apiVersion": "2019-09-01",
      "name": "[variables('vnetName')]",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[resourceGroup().location]",
      "properties": {
        "subnets": [
          {
            "name": "[variables('subnetName')]",
            "properties": {
              "addressPrefix": "10.1.0.0/16"
            }
          }
        ],
        "addressSpace": {
          "addressPrefixes": [
            "10.0.0.0/15"
          ]
        }
      }
    },
    {
      "name": "[parameters('clusterName')]",
      "type": "Microsoft.ContainerService/managedClusters",
      "apiVersion": "2020-12-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "kubernetesVersion": "[parameters('kubernetesVersion')]",
        "dnsPrefix": "[parameters('clusterName')]",
        "agentPoolProfiles": [
          {
            "name": "system",
            "count": 2,
            "orchestratorVersion": "[parameters('kubernetesVersion')]",
            "vmSize": "Standard_B2s",
            "type": "VirtualMachineScaleSets",
            "enableNodePublicIP": false,
            "storageProfile": "ManagedDisks",
            "vnetSubnetID": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('subnetName'))]",
            "mode": "System"
          },
          {
            "name": "[parameters('linuxPoolName')]",
            "count": "[parameters('linuxNodeCount')]",
            "orchestratorVersion": "[parameters('linuxNodeKubernetesVersion')]",
            "vmSize": "Standard_D8as_v4",
            "type": "VirtualMachineScaleSets",
            "enableNodePublicIP": false,
            "storageProfile": "ManagedDisks",
            "vnetSubnetID": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('subnetName'))]",
            "mode": "User"
          },
          {
            "name": "[parameters('windowsPoolName')]",
            "count": "[parameters('windowsNodeCount')]",
            "orchestratorVersion": "[parameters('windowsNodeKubernetesVersion')]",
            "vmSize": "Standard_D8as_v4",
            "type": "VirtualMachineScaleSets",
            "enableNodePublicIP": false,
            "storageProfile": "ManagedDisks",
            "vnetSubnetID": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('subnetName'))]",
            "mode": "User"
          }
        ],
        "windowsProfile": "[parameters('windowsProfile')]",
        "servicePrincipalProfile": {
          "clientId": "msi",
          "secret": null
        },
        "aadProfile": {
          "clientAppID": "[parameters('aadClientAppId')]",
          "serverAppID": "[parameters('aadServerAppId')]",
          "serverAppSecret": "[parameters('aadServerAppSecret')]",
          "tenantID": "[subscription().tenantID]"
        },
        "addonProfiles": {
          "omsagent": {
            "enabled": true,
            "config": {
              "logAnalyticsWorkspaceResourceID": "[variables('logAnalyticsId')]"
            }
          }
        },
        "nodeResourceGroup": "[parameters('nodeResourceGroup')]",
        "enableRBAC": true,
        "networkProfile": {
          "networkPlugin": "azure",
          "loadBalancerSku": "standard",
          "serviceCidr": "10.0.0.0/16",
          "dnsServiceIP": "10.0.0.10",
          "dockerBridgeCidr": "172.17.0.1/16"
        }
      },
      "identity": {
        "type": "SystemAssigned"
      },
      "dependsOn": [
        "[variables('vnetName')]"
      ]
    }
  ],
  "outputs": {
    "clusterName": {
      "type": "string",
      "value": "[parameters('clusterName')]"
    }
  }
}
